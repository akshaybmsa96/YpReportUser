<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_margin="2dp"
    android:background="#fafafa"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:textSize="16sp"
        android:text="Akshay Sharma"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignBaseline="@+id/buttonPresent"
        android:layout_alignBottom="@+id/buttonPresent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonPresent" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/buttonPresent"
        android:background="@color/white"
        android:textSize="24sp"
        android:textColor="@color/green"
        android:text="P"
        android:layout_toStartOf="@+id/buttonHalfDay"
        android:layout_marginEnd="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/buttonHalfDay"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:background="@color/white"
        android:text="H"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/buttonAbsent" />
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textSize="24sp"
        android:textColor="@color/darkred"
        android:id="@+id/buttonAbsent"
        android:text="A"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>